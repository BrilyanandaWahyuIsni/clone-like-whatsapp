{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": false,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "frontend/next-env.d.ts",
    "frontend/.next/types/**/*.ts",
    "dummy_api/createDummyCommunityData.mjs",
    "backend/**/*.ts", 
    "frontend/**/*.ts", 
    "frontend/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
